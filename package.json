{
  "name": "kickoff-framework",
  "title": "Kickoff",
  "description": "A lightweight front-end framework for creating scalable, responsive websites",
  "version": "9.0.0-alpha.1",
  "homepage": "http://trykickoff.com",
  "repo": "https://github.com/TryKickoff/kickoff/",
  "authors": [
    {
      "name": "Zander Martineau",
      "url": "http://zander.wtf"
    },
    {
      "name": "Ashley Nolan",
      "url": "https://ashleynolan.co.uk"
    },
    {
      "name": "Nic Bell",
      "url": "http://nicbell.net"
    }
  ],
  "contributors": [
    "Github contributors <https://github.com/TryKickoff/kickoff/graphs/contributors>"
  ],
  "scripts": {
    "build": "npm run compile:all && npm run standalone",
    "deploy": "npm run compile:release && npm run standalone",
    "test": "npm run lint:js && npm run lint:css",
    "compile:release": "webpack -p",
    "compile:all": "webpack",
    "lint:js": "xo",
    "fix:js": "xo --fix",
    "standalone": "cp -R assets/src/js/standalone assets/dist/js/standalone"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/TryKickoff/kickoff.git"
  },
  "bugs": {
    "url": "https://github.com/TryKickoff/kickoff/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0"
  },
  "dependencies": {
    "console": "0.5.2",
    "copy-js": "0.1.1",
    "double-dollar": "1.0.0",
    "include-media": "1.4.9",
    "kickoff-fluidVideo.css": "1.1.0",
    "kickoff-grid.css": "1.1.1",
    "kickoff-utils.scss": "2.0.3",
    "kickoff-welcome.js": "1.4.0",
    "lite-ready": "1.0.4",
    "normalize-scss": "6.0.0",
    "svg4everybody": "2.1.4"
  },
  "devDependencies": {
    "autoprefixer": "6.7.2",
    "babel-core": "6.22.1",
    "babel-loader": "6.2.10",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "clean-webpack-plugin": "0.1.15",
    "css-loader": "0.26.1",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "node-sass": "4.5.0",
    "path": "0.12.7",
    "postcss-loader": "1.2.2",
    "sass-loader": "5.0.0",
    "style-loader": "0.13.1",
    "stylelint": "7.8.0",
    "stylelint-config-standard": "16.0.0",
    "webpack": "2.2.1",
    "webpack-merge": "2.6.1",
    "xo": "0.17.1"
  },
  "keywords": [
    "kickoff",
    "âš½"
  ],
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "xo": {
    "esnext": true,
    "global": [
      "window"
    ],
    "ignores": [
      "**/assets/src/js/standalone/**/*.js",
      "**/assets/dist/**/*.js",
      ".kickoff/**/*.js"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "xo/filename-case": [
        "off"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "blockless-after-same-name-blockless",
            "blockless-group"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "rule-non-nested-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "after-single-line-comment"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "max-empty-lines": 2
    }
  }
}
