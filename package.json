{
  "name": "kickoff-framework",
  "title": "Kickoff",
  "description": "A lightweight front-end framework for creating scalable, responsive websites",
  "version": "8.0.0",
  "homepage": "http://trykickoff.com",
  "authors": [
    {
      "name": "Zander Martineau",
      "url": "http://zander.wtf"
    },
    {
      "name": "Ashley Nolan",
      "url": "https://ashleynolan.co.uk"
    },
    {
      "name": "Nic Bell",
      "url": "http://nicbell.net"
    }
  ],
  "contributors": [
    "Github contributors <https://github.com/TryKickoff/kickoff/graphs/contributors>"
  ],
  "scripts": {
    "start": "gulp serve",
    "watch": "gulp watch",
    "predeploy": "npm prune && npm install",
    "deploy": "npm run compile:release",
    "test": "npm run compile:all",
    "build": "webpack",
    "build:watch": "webpack -w",
    "build:release": "webpack -p",
    "serve": "webpack-dev-server --open",
    "compile:release": "gulp compile --release",
    "compile:all": "gulp compile",
    "compile:css": "gulp css",
    "compile:css:debug": "DEBUG=* gulp css",
    "compile:js": "gulp javascript",
    "compile:svg": "gulp svg",
    "compress:images": "gulp images",
    "clean:all": "gulp clean",
    "copy:all": "gulp copy",
    "copy": "gulp copy",
    "lint:js": "xo",
    "lint:css": "gulp test:css",
    "fix:js": "xo --fix"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/TryKickoff/kickoff.git",
    "page": "https://github.com/TryKickoff/kickoff/"
  },
  "bugs": {
    "url": "https://github.com/TryKickoff/kickoff/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0"
  },
  "dependencies": {
    "@kickoff/utils.scss": "3.0.2",
    "@kickoff/fluidvideo.css": "1.2.1",
    "@kickoff/grid.css": "^1.2.2",
    "@kickoff/welcome.js": "1.5.0",
    "console": "0.5.2",
    "copy-js": "0.1.1",
    "double-dollar": "1.0.0",
    "include-media": "1.4.9",
    "lite-ready": "1.0.4",
    "normalize-scss": "^7.0.0",
    "postcss-pxtorem": "^4.0.1",
    "svg4everybody": "^2.1.9"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "browser-sync": "^2.18.13",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "css-loader": "^0.28.7",
    "cssnano": "3.10.0",
    "del": "^3.0.0",
    "extract-text-webpack-plugin": "3.0.0",
    "eyeglass": "1.2.1",
    "filesizegzip": "2.0.0",
    "gulp": "3.9.1",
    "gulp-banner": "0.1.3",
    "gulp-imagemin": "3.2.0",
    "gulp-postcss": "^7.0.0",
    "gulp-sass": "3.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-stylelint": "3.9.0",
    "gulp-svgmin": "^1.2.4",
    "gulp-svgstore": "6.1.0",
    "gulp-tap": "1.0.1",
    "gulp-util": "3.0.8",
    "imagemin-pngquant": "5.0.0",
    "opn": "^5.1.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "xo": "0.19.0"
  },
  "keywords": [
    "kickoff",
    "âš½"
  ],
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "xo": {
    "esnext": true,
    "global": [
      "window"
    ],
    "ignores": [
      "**/assets/src/js/standalone/**/*.js",
      "**/assets/dist/**/*.js",
      ".kickoff/**/*.js",
      "gulpfile.js"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "xo/filename-case": [
        "off"
      ]
    }
  },
  "stylelint": {
    "configBasedir": ".",
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "blockless-after-same-name-blockless",
            "blockless-group"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "rule-non-nested-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "after-single-line-comment"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "max-empty-lines": 2
    }
  }
}
